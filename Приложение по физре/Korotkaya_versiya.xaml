        <TextBlock x:Name="textBlock1_Copy6" HorizontalAlignment="Left" Margin="355,264,0,0" TextWrapping="Wrap" Text="Пульс после" VerticalAlignment="Top" FontSize="14" Width="83"/>
        <TextBlock x:Name="textBlock1_Copy7" HorizontalAlignment="Left" Margin="60,325,0,0" TextWrapping="Wrap" Text="Систолическое давление" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock x:Name="textBlock1_Copy8" HorizontalAlignment="Left" Margin="355,325,0,0" TextWrapping="Wrap" Text="Диастолическое давление" VerticalAlignment="Top" FontSize="14" Width="177"/>
