        <TextBox x:Name="tb_SpeedAndStrengthEndurance" HorizontalAlignment="Left" Height="26" Margin="355,544,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" FontSize="14" PreviewTextInput="tb_SpeedAndStrengthEndurance_PreviewTextInput"/>

        <ComboBox x:Name="cb_Gender" HorizontalAlignment="Left" Margin="355,154,0,0" VerticalAlignment="Top" Width="235" Height="26">
            <ComboBoxItem x:Name="M"  Content="Мужской"/>
            <ComboBoxItem x:Name="W" Content="Женский"/>
        </ComboBox>
        
        <Button x:Name="b_nazad" Content="Назад" HorizontalAlignment="Left" Margin="207,595,0,0" VerticalAlignment="Top" Width="93" Height="30" Click="b_nazad_Click"/>
        <Button x:Name="b_dalee" Content="Далее" HorizontalAlignment="Left" Margin="340,595,0,0" VerticalAlignment="Top" Width="93" Height="30" Click="b_dalee_Click"/>
